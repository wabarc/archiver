{
  "name": "@wabarc/archiver",
  "version": "0.1.0",
  "description": "Archiving webpages from the Telegram channel",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "lint": "eslint ./ --ext .ts",
    "test": "jest --testTimeout 300000",
    "clean": "rm -rf ./dist",
    "prepub": "npm run clean; npm run format; npm run lint; npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wabarc/archiver.git"
  },
  "keywords": [
    "archive",
    "wayback",
    "telegram"
  ],
  "author": "Wayback Archiver",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/wabarc/archiver/issues"
  },
  "homepage": "https://github.com/wabarc/archiver#readme",
  "dependencies": {
    "@wabarc/cairn": "^2.0.0",
    "axios": "^0.21.0",
    "cheerio": "^1.0.0-rc.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.22",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-plugin-jest": "^24.1.0",
    "jest": "^26.5.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3",
    "typescript-formatter": "^7.2.2"
  },
  "engines": {
    "node": ">= 12"
  }
}
